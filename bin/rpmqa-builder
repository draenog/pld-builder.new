#!/bin/sh
DIST=ac
ARCH_LIST="somearch1 somearch2"
FTP_HOST="fpldac@ep09.pld-linux.org"
FTP_PATH="/home/ftp/pub/Linux/PLD/dists/${DIST}/.stat/builder/ac/"
CHROOT="$HOME/chroots/chroot-"

for arch in ${ARCH_LIST} ; do
	file=`mktemp /tmp/rpmqa-XXXXXX`
	sudo chroot $CHROOT$arch /bin/su - builder bin/rpmqa-chroot > $file
	chmod 644 $file
	scp -B -p $file ${FTP_HOST}:${FTP_PATH}/rpmqa-$arch.txt
	rm -f $file
done

